    "version": "0.2.0",
    "configurations": [
        {
            "name": "API on Postgres",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main/main.go",
            "env": {
                "DB_TYPE": "postgres",
                "DB_DSN": "host={{.Host}} port={{.Port}} dbname={{.Database}} user={{.User}} password={{.Pass}} sslmode=disable",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_DATABASE": "postgres",
                "DB_USER": "postgres",
                "DB_PASS": "p455w0rd",
                "DB_AUTO_MIGRATE": "false",

                "ZITADEL_DOMAIN": "localhost",
                "ZITADEL_KEY": "${workspaceFolder}/docker/zitadel/terraform/todo-api-go-key.json",
                "ZITADEL_PORT": "8088",
                "ZITADEL_INSECURE": "true"
            }
        }
    ]
}